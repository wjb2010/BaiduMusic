<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"

    android:layout_margin="10dp"

    >

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="3"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_item_vertical"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_gravity="center"
            android:src="@mipmap/ic_launcher"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="5"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:layout_weight="5"
            android:orientation="vertical">


            <TextView
                android:id="@+id/tv_item_vertical_one"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"

                android:text="新歌榜"
                android:textColor="@android:color/black"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_item_vertical_two"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:gravity="center"
               android:drawableLeft="@mipmap/img_top_number_1"
                android:layout_weight="1"
                android:text="give you world"
                android:textSize="11sp" />

            <TextView
                android:id="@+id/tv_item_vertical_three"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:text="sdfsdf"
                android:gravity="center"
                android:drawableLeft="@mipmap/img_top_number_2"
                android:textSize="11sp" />
            <TextView
                android:id="@+id/tv_item_vertical_four"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="give you world"
                android:drawableLeft="@mipmap/img_top_number_3"
                android:textSize="11sp" />
        </LinearLayout>


    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="100dp"
        android:layout_weight="0.5"

        >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:layout_gravity="center"

            android:src="@mipmap/btn_more_left_arrow_nor" />

    </LinearLayout>

</LinearLayout>