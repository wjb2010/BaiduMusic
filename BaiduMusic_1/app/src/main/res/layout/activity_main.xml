<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"


    tools:context="com.example.dllo.baidumusic.Activity.MainActivity">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/fra_all_from_down"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <FrameLayout
                    android:id="@+id/fra"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="8">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="2"
                            android:background="@mipmap/default_skin_orig"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="0.4"


                                >

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"

                                android:orientation="horizontal"

                                >

                                <ImageView
                                    android:id="@+id/iv_main_call_side_fragment"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:src="@mipmap/ic_gengduo_normal" />

                                <android.support.design.widget.TabLayout
                                    android:id="@+id/tab_main"
                                    android:layout_width="0dp"
                                    android:layout_height="match_parent"
                                    android:layout_weight="4" />

                                <ImageView
                                    android:layout_width="5dp"
                                    android:layout_height="20dp"
                                    android:layout_gravity="center"
                                    android:layout_weight="1"
                                    android:src="@mipmap/main_ic_search_api_mtrl_alpha" />


                            </LinearLayout>
                        </LinearLayout>

                        <android.support.v4.view.ViewPager
                            android:id="@+id/vp_main"
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="13">

                        </android.support.v4.view.ViewPager>


                    </LinearLayout>


                </FrameLayout>

            </LinearLayout>

            <RelativeLayout
                android:id="@+id/rl_down_music"
                android:layout_width="match_parent"


                android:layout_height="55dp"

                android:layout_alignParentBottom="true"


                android:background="#a1ffffff">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="0.5"
                        android:src="@mipmap/ic_launcher" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:layout_weight="1"
                        android:orientation="vertical"


                        >

                        <TextView
                            android:id="@+id/tv_music_name_marquee"
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:ellipsize="marquee"

                            android:focusable="true"
                            android:gravity="bottom"
                            android:marqueeRepeatLimit="marquee_forever"
                            android:singleLine="true"
                            android:text="刀剑如梦刀剑如梦刀剑如梦刀剑如梦刀剑如梦"


                            />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:text="我是歌手哦"
                            android:id="@+id/tv_music_author"
                            android:textColor="#878484" />
                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:orientation="horizontal">

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:clickable="true"
                            android:src="@mipmap/bt_minibar_play_normal"
                            android:id="@+id/btn_music_control_play_pause"

                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:clickable="true"
                            android:src="@mipmap/bt_minibar_next_normal"
                            android:id="@+id/btn_music_control_next"

                            />

                        <ImageView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:scaleX="0.7"
                            android:scaleY="0.7"
                            android:src="@mipmap/bt_minibar_playinglist_normal"

                            android:id="@+id/iv_btn_music_list_from_rightdown"

                            />


                    </LinearLayout>


                </LinearLayout>


            </RelativeLayout>

            <ProgressBar
                android:layout_width="match_parent"
                android:layout_height="5dp"
                style="@style/Base.Widget.AppCompat.ProgressBar.Horizontal"
                android:layout_alignParentBottom="true"
                android:layout_above="@+id/rl_down_music"
                android:id="@+id/pb_music_down"

                />

        </RelativeLayout>
    </FrameLayout>

</RelativeLayout>
