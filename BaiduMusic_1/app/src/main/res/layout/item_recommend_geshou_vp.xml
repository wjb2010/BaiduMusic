<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"

    android:layout_gravity="center"



    >


<LinearLayout
    android:layout_width="0dp"
    android:layout_weight="1"
    android:layout_height="wrap_content"
    android:orientation="vertical"


    >
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/iv_item_geshou_one"
        />

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:text="give you world"
        android:textSize="11sp"
        android:id="@+id/tv_item_geshou_one"
        />
</LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_item_geshou_two"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="give you world"
            android:textSize="11sp"
            android:id="@+id/tv_item_geshou_two"
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@mipmap/ic_launcher"
            android:id="@+id/iv_item_geshou_three"
            />

        <TextView
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:text="give you world"
            android:textSize="11sp"
            android:id="@+id/tv_item_geshou_three"
            />
    </LinearLayout>
</LinearLayout>