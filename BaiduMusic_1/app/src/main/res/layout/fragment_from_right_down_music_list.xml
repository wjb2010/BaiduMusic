<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    android:background="#10FFFFFF"
    tools:context="com.example.dllo.baidumusic.Activity.MainActivity">


    <com.example.dllo.baidumusic.CustomizeView.MySideViewFromDown
        android:id="@+id/rightview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:getTextDown="fra_music_list_from_rightdown"


        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="#00e65e5e"
            android:orientation="vertical">

            <!--上方透明布局-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.7"
                android:background="#8d000000">


            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="7"
                android:background="#ffffff"
                android:orientation="vertical">

                <!--正在播放列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"

                    android:orientation="horizontal"
                    android:background="#cccccc">

                    <ImageView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:src="@mipmap/bt_list_button_roundplay_normal"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:text="正在播放列表"
                        android:gravity="center"
                        android:textColor="@android:color/black"
                        android:layout_gravity="center"
                        />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="全部清空"
                        android:textSize="10sp"
                        android:layout_gravity="center"
                        />


                </LinearLayout>

                <!--歌曲列表-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="7"
                    android:background="@android:color/white">

                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    </android.support.v7.widget.RecyclerView>


                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

    </com.example.dllo.baidumusic.CustomizeView.MySideViewFromDown>
</RelativeLayout>
